<div class="tableau-wrapper">
  <div class="tableau-background"></div>
  <div class="tableau-content">
    <iframe
      src="<%= project.tableauUrl %>&:showVizHome=no&:embed=true"
      width="100%"
      height="600"
      style="border:none;"
      loading="lazy"
      title="<%= project.title %> Visualization"
      onerror="showFallback(this)"
    ></iframe>
  </div>
</div>

<style>
  .tableau-wrapper {
    position: relative;
    min-height: 600px;
    border-radius: 8px;
    margin: 2rem 0;
    overflow: hidden;
    isolation: isolate;
  }

  .tableau-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
    url('https://cdn.vectorstock.com/i/500p/83/02/abstract-light-blue-background-with-flowing-vector-54338302.jpg') center/cover no-repeat;
    z-index: -1;
  }

  .tableau-content {
    position: relative;
    height: 100%;
  }
</style>