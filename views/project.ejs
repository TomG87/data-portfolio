<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= project.title %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('_partials/header') %>

  <main>
    <h1><%= project.title %></h1>
    <p><%= project.description %></p>

    <!-- Tableau Embed -->
    <div class="tableau-viz">
      <iframe 
        src="<%= project.tableauUrl %>" 
        width="100%" 
        height="600"
        style="border:none;"
      ></iframe>
    </div>

    <!-- SQL Query -->
    <div class="sql-query">
      <h3>SQL Query:</h3>
      <pre><code><%= project.sqlQuery %></code></pre>
    </div>
  </main>

  <%- include('_partials/footer') %>
</body>
</html>